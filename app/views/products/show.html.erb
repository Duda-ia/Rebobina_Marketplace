<!-- app/views/products/show.html.erb -->
<div class="product-card single">
  <!-- Coluna da imagem -->
  <div class="product-image-col">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, alt: @product.name %>
    <% else %>
      <img src="https://via.placeholder.com/300?text=No+Image" alt="<%= @product.name %>" />
    <% end %>
  </div>

  <!-- Coluna das infos (título, preço, descrição, etc.) -->
  <div class="product-info-col">
    <h3 class="product-title"><%= @product.name %></h3>
    <p class="product-price">
      <strong>Preço:</strong> <%= number_to_currency(@product.price) %>
    </p>
    <p class="product-description"><%= @product.description %></p>

     <%= link_to "Comprar", new_product_order_path(@product), class: 'button-card'  %>

