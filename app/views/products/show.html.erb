<div class="container">
  <div class="content">
    <div class="left-box">
      <div class="border"></div>
      <div class="images">
        <%= image_tag @product.image, alt: "Image 1", class: "image" %>
        <%= image_tag @product.image, alt: "Image 2", class: "image" %>
        <%= image_tag @product.image, alt: "Image 3", class: "image" %>
      </div>
    </div>
    <div class="middle-box">
      <div class="color-box"></div>
      <%= image_tag @product.image, alt: "Main Image", class: "main-image" %>
    </div>
    <div class="right-box">
        <div class="product-info">
        <h3 class="title"><%= @product.name %></h3>
        <div class="description"><%= @product.description %>
        </p>
        <p class="price">
          <%= number_to_currency(@product.price) %>
        </p>
        <div class="add-to-cart">
        <%= link_to "buy", new_product_order_path(@product)  %>
        </div>
        <p class="shipping">Ready for dispatch, 1-3 business days.</p>
        </div>
    </div>
  </div>
</div>
