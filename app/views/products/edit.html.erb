
  <h1 class="title_forms">Edit Product</h1>
  <div class="product-form-container">
    <%= simple_form_for @product do |f| %>
        <%= f.input :category %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-primary mt-4" %>
      <% end %>

  </div>
