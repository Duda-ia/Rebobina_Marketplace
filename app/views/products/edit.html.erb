<div class="container">
<h1>Edit Product</h1>
    <%= simple_form_for @product do |f| %>
        <%= f.input :category %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :image, as: :file %>
        <%= f.submit class: "btn btn-primary mt-4" %>
      <% end %>

</div>
